<%- include('../../layout/header', { page: 'newArticle' }); %>
<%- include('../../layout/adminnavbar'); %>
<section class="container-fluid my-3">
   <div class="container p-3">
      <h1>Cadastrar artigos</h1>
      <hr>
      <form action="/articles/save" method="POST" class="form-group mt-3" autocomplete="off">
         <label>Insira um título</label>
         <input type="text" class="form-control" name="title" placeholder="Insira o título do artigo" autofocus><br>

         <label class="mt-3">Insira a descrição</label>
         <textarea class="form-control" name="description" rows="20" id="article"></textarea><br>

         <label class="mt-3">Selecione a categoria</label>
         <select name="catId" class="form-control">
            <% categories.forEach(cat => { %>
               <option value="<%= cat.id %>"><%= cat.title %></option>
            <% }) %>
         </select>

         <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary mr-3"><i class="fa fa-save mr-2"></i>Cadastrar</button>
            <button type="reset" class="btn btn-secondary"><i class="fa fa-ban mr-2"></i>Cancelar</button>
         </div>
      </form>
   </div>
</section>
<%- include('../../layout/footer'); %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
   tinymce.init({
      selector: '#article',
      plugins: [
         'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons checklist'
      ],
      language: 'pt_BR',
      resize: true
   })
</script>